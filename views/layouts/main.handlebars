<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech Blog</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css"
    />
    <link rel="stylesheet" href="/stylesheet/style.css" />
  </head>

  <body class="flex-column">
    <h1 class="has-text-weight-bold px-4 py-4">A Tech Blog</h1>
    <nav class="navbar">
      {{#if loggedIn}}
        <ul>
          <li class="li-inline nav-item is-hoverable"><a href="/">Home</a></li>
          <li class="li-inline nav-item is-hoverable"><a
              href="/dashboard"
            >Dashboard</a></li>
          <li class="li-inline nav-item is-hoverable"><a
              href="/login"
            >Login</a></li>
          <li class="li-inline nav-item is-hoverable"><a
              href="#"
              id="logout-link"
            >Logout</a></li>
        </ul>
      {{/if}}
    </nav>

    <main>
      {{{body}}}
    </main>

    <footer class="flex-row justify-center">
      &copy; Tech Blog
    </footer>

    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}

  </body>

</html>